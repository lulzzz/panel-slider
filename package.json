{
  "name": "panel-slider",
  "version": "0.3.0",
  "description": "Panel Slider",
  "author": "spacejack",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build-old:lib": "tsc -p src --emitDeclarationOnly && mv src/index.d.ts . && rm src/*.d.ts && browserify src/index.ts -p [ tsify --project src/tsconfig.json ] -s PanelSlider -o index.js",
    "build:lib": "tsc -p src",
    "serve:ex": "http-server -p 3000 example-mithril/public",
    "compile:ex": "browserify --debug example-mithril/src/main.ts -p [ tsify --project example-mithril/src/tsconfig.json ] -o example-mithril/public/js/app.js",
    "watch:ex": "watchify -v --debug example-mithril/src/main.ts -p [ tsify --project example-mithril/src/tsconfig.json ] -o example-mithril/public/js/app.js",
    "build:ex": "browserify example-mithril/src/main.ts -p [ tsify --project example-mithril/src/tsconfig.json ] -o example-mithril/public/js/app.js",
    "clean:ex": "rm -f example/public/js/app.js example-mithril/public/js/app.js",
    "clean:lib": "rm -f *.js *.d.ts",
    "build": "run-s build:*",
    "clean": "run-s clean:*",
    "start": "run-p watch:ex serve:ex"
  },
  "devDependencies": {
    "@types/mithril": "^1.1.16",
    "browserify": "^16.2.3",
    "http-server": "^0.11.1",
    "mithril": "^1.1.6",
    "npm-run-all": "^4.1.5",
    "tsify": "^4.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "uglify-js": "^3.4.9",
    "watchify": "^3.11.1"
  }
}
